<body>
    <div class="container">
        <h1>酒店比价记录工具</h1>
        <!-- 表单区域 - 新增城市位置+备注 -->
        <div class="form-section">
            <div class="form-group">
                <div class="form-item">
                    <label for="hotelName">酒店名称</label>
                    <input type="text" id="hotelName" placeholder="如：XX国际酒店">
                </div>
                <div class="form-item">
                    <label for="cityAddr">城市/位置</label>
                    <input type="text" id="cityAddr" placeholder="如：上海-浦东新区-陆家嘴">
                </div>
                <div class="form-item">
                    <label for="checkIn">入住时间</label>
                    <input type="datetime-local" id="checkIn">
                </div>
                <div class="form-item">
                    <label for="checkOut">离店时间</label>
                    <input type="datetime-local" id="checkOut">
                </div>
                <div class="form-item">
                    <label for="roomType">房型</label>
                    <select id="roomType">
                        <option value="标准间">标准间</option>
                        <option value="大床房">大床房</option>
                        <option value="双床房">双床房</option>
                        <option value="套房">套房</option>
                        <option value="家庭房">家庭房</option>
                    </select>
                </div>
                <div class="form-item">
                    <label for="price">价格（元/晚）</label>
                    <input type="number" id="price" placeholder="如：399">
                </div>
                <div class="form-item">
                    <label for="roomNum">房间号</label>
                    <input type="text" id="roomNum" placeholder="多个用,/、/ 分隔，如：801,802">
                </div>
                <!-- 新增：备注 - 独占一行 -->
                <div class="form-item-full">
                    <label for="hotelNote">备注</label>
                    <textarea id="hotelNote" placeholder="如：含双早、近地铁2号线、可免费取消..."></textarea>
                </div>
            </div>
            <button class="add-btn" onclick="addHotel()">添加酒店</button>
        </div>
        <!-- 酒店卡片展示区域 -->
        <div class="hotels-list" id="hotelsList"></div>
    </div>
    <script>
        function addHotel() {
            // 获取表单输入值 - 新增城市位置+备注
            const hotelName = document.getElementById('hotelName').value.trim();
            const cityAddr = document.getElementById('cityAddr').value.trim();
            const checkIn = document.getElementById('checkIn').value;
            const checkOut = document.getElementById('checkOut').value;
            const roomType = document.getElementById('roomType').value;
            const price = document.getElementById('price').value.trim();
            let roomNum = document.getElementById('roomNum').value.trim();
            let hotelNote = document.getElementById('hotelNote').value.trim();

            // 原有必填验证逻辑不变
            if (!hotelName || !checkIn || !checkOut || !price) {
                alert('请填写完整酒店核心信息');
                return;
            }

            // 处理非必填项 - 未填写显示「未填写」
            const addrText = cityAddr ? cityAddr : '未填写';
            const noteText = hotelNote ? hotelNote : '无备注';
            // 处理多房间号 - 原有逻辑不变
            if (roomNum) {
                roomNum = roomNum.replace(/，| /g, ',').split(',').filter(item => item).join('，');
            } else {
                roomNum = '未填写';
            }

            // 创建酒店卡片 - 新增城市位置+备注展示
            const hotelsList = document.getElementById('hotelsList');
            const card = document.createElement('div');
            card.className = 'hotel-card';
            card.innerHTML = `
                <div class="card-header">
                    <div class="hotel-name">${hotelName}</div>
                    <div class="price">¥${price}/晚</div>
                </div>
                <div class="addr-info">
                    <label>位置：</label>${addrText}
                </div>
                <div class="type-info">
                    <label>房型：</label>${roomType}
                </div>
                <div class="date-info">
                    <div class="date-item">
                        <span class="date-label">入住</span>
                        <span>${formatTime(checkIn)}</span>
                    </div>
                    <div class="date-item">
                        <span class="date-label">离店</span>
                        <span>${formatTime(checkOut)}</span>
                    </div>
                </div>
                <div class="room-info">
                    <label>房间号：</label>${roomNum}
                </div>
                <div class="note-info">
                    <label>备注：</label>${noteText}
                </div>
            `;
            hotelsList.appendChild(card);

            // 清空表单 - 新增清空城市位置+备注
            document.getElementById('hotelName').value = '';
            document.getElementById('cityAddr').value = '';
            document.getElementById('checkIn').value = '';
            document.getElementById('checkOut').value = '';
            document.getElementById('roomType').value = '标准间';
            document.getElementById('price').value = '';
            document.getElementById('roomNum').value = '';
            document.getElementById('hotelNote').value = '';

            // 原有价格排序逻辑不变
            sortHotelsByPrice();
        }

        // 格式化时间显示（原有逻辑不变）
        function formatTime(datetimeStr) {
            const date = new Date(datetimeStr);
            return date.toLocaleString('zh-CN', {
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // 按价格从低到高排序酒店卡片（原有逻辑不变）
        function sortHotelsByPrice() {
            const hotelsList = document.getElementById('hotelsList');
            const cards = Array.from(hotelsList.children);
            cards.sort((a, b) => {
                const priceA = parseInt(a.querySelector('.price').textContent.replace(/¥|\/晚/g, ''));
                const priceB = parseInt(b.querySelector('.price').textContent.replace(/¥|\/晚/g, ''));
                return priceA - priceB;
            });
            hotelsList.innerHTML = '';
            cards.forEach(card => hotelsList.appendChild(card));
        }
    </script>
</body>

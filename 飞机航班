<body>
    <div class="container">
        <h1>航班比价记录工具</h1>
        <!-- 表单区域 - 新增座位号输入项 -->
        <div class="form-section">
            <div class="form-group">
                <div class="form-item">
                    <label for="departure">出发地</label>
                    <input type="text" id="departure" placeholder="如：北京">
                </div>
                <div class="form-item">
                    <label for="destination">目的地</label>
                    <input type="text" id="destination" placeholder="如：上海">
                </div>
                <div class="form-item">
                    <label for="departTime">出发时间</label>
                    <input type="datetime-local" id="departTime">
                </div>
                <div class="form-item">
                    <label for="arriveTime">到达时间</label>
                    <input type="datetime-local" id="arriveTime">
                </div>
                <div class="form-item">
                    <label for="price">价格（元）</label>
                    <input type="number" id="price" placeholder="如：800">
                </div>
                <!-- 新增：航班座位号输入框 -->
                <div class="form-item">
                    <label for="seatNum">座位号</label>
                    <input type="text" id="seatNum" placeholder="多个用,/、/ 分隔，如：35A,36B">
                </div>
            </div>
            <button class="add-btn" onclick="addFlight()">添加航班</button>
        </div>
        <!-- 航班卡片展示区域 -->
        <div class="flights-list" id="flightsList"></div>
    </div>
    <script>
        function addFlight() {
            // 获取表单输入值 - 新增座位号
            const departure = document.getElementById('departure').value.trim();
            const destination = document.getElementById('destination').value.trim();
            const departTime = document.getElementById('departTime').value;
            const arriveTime = document.getElementById('arriveTime').value;
            const price = document.getElementById('price').value.trim();
            let seatNum = document.getElementById('seatNum').value.trim();

            // 原有验证逻辑不变
            if (!departure || !destination || !departTime || !arriveTime || !price) {
                alert('请填写完整航班信息');
                return;
            }

            // 处理多座位号：统一分隔符为中文顿号，自动过滤空值
            if (seatNum) {
                seatNum = seatNum.replace(/，| /g, ',').split(',').filter(item => item).join('，');
            } else {
                seatNum = '未填写';
            }

            // 创建航班卡片 - 新增座位号展示
            const flightsList = document.getElementById('flightsList');
            const card = document.createElement('div');
            card.className = 'flight-card';
            card.innerHTML = `
                <div class="card-header">
                    <div class="route">${departure} → ${destination}</div>
                    <div class="price">¥${price}</div>
                </div>
                <div class="time-info">
                    <div class="time-item">
                        <span class="time-label">出发</span>
                        <span>${formatTime(departTime)}</span>
                    </div>
                    <div class="time-item">
                        <span class="time-label">到达</span>
                        <span>${formatTime(arriveTime)}</span>
                    </div>
                </div>
                <!-- 新增：座位号展示区域 -->
                <div class="seat-info">
                    <label>座位号：</label>${seatNum}
                </div>
            `;
            flightsList.appendChild(card);

            // 清空表单 - 新增清空座位号
            document.getElementById('departure').value = '';
            document.getElementById('destination').value = '';
            document.getElementById('departTime').value = '';
            document.getElementById('arriveTime').value = '';
            document.getElementById('price').value = '';
            document.getElementById('seatNum').value = '';

            // 原有价格排序逻辑不变
            sortFlightsByPrice();
        }
        // 格式化时间显示（原有逻辑不变）
        function formatTime(datetimeStr) {
            const date = new Date(datetimeStr);
            return date.toLocaleString('zh-CN', {
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }
        // 按价格从低到高排序航班卡片（原有逻辑不变）
        function sortFlightsByPrice() {
            const flightsList = document.getElementById('flightsList');
            const cards = Array.from(flightsList.children);
            cards.sort((a, b) => {
                const priceA = parseInt(a.querySelector('.price').textContent.replace('¥', ''));
                const priceB = parseInt(b.querySelector('.price').textContent.replace('¥', ''));
                return priceA - priceB;
            });
            flightsList.innerHTML = '';
            cards.forEach(card => flightsList.appendChild(card));
        }
    </script>
</body>
